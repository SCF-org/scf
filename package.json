{
  "name": "scf-deploy",
  "version": "1.0.0",
  "description": "S3 + CloudFront static deployment automation CLI with automatic SSL certificate creation",
  "type": "module",
  "author": "jeonghodong <fire13764@gmail.com>",
  "license": "MIT",
  "keywords": [
    "aws",
    "s3",
    "cloudfront",
    "deployment",
    "cli",
    "static-site",
    "cdn",
    "aws-deployment",
    "static-hosting",
    "ssl",
    "https",
    "acm",
    "route53",
    "automatic-ssl",
    "custom-domain"
  ],
  "homepage": "https://github.com/SCF-org",
  "repository": {
    "type": "git",
    "url": "https://github.com/SCF-org/scf"
  },
  "bugs": {
    "url": "https://github.com/SCF-org/scf/issues"
  },
  "bin": {
    "scf-deploy": "./dist/bin/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "scripts"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest src/__tests__/unit",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest src/__tests__/integration",
    "test:e2e": "E2E_TEST=true AWS_SDK_LOAD_CONFIG=1 NODE_OPTIONS=--experimental-vm-modules jest src/__tests__/e2e --runInBand",
    "test:cli": "NODE_OPTIONS=--experimental-vm-modules jest src/__tests__/cli",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "prepublishOnly": "npm run build",
    "postinstall": "node scripts/postinstall.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-acm": "^3.600.0",
    "@aws-sdk/client-cloudfront": "^3.600.0",
    "@aws-sdk/client-route-53": "^3.600.0",
    "@aws-sdk/client-s3": "^3.600.0",
    "@aws-sdk/client-sts": "^3.600.0",
    "@aws-sdk/credential-providers": "^3.600.0",
    "@aws-sdk/lib-storage": "^3.600.0",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^12.0.0",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.2",
    "hasha": "^6.0.0",
    "inquirer": "^9.2.23",
    "jiti": "^1.21.0",
    "mime-types": "^2.1.35",
    "ora": "^8.0.1",
    "p-limit": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.5",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.19.24",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-jest": "^4.1.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "memfs": "^4.50.0",
    "ts-jest": "^29.4.5",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
